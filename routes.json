{
  "/reports": {
    "post": {
      "controller": "reports",
      "handler": "createReport",
      "auth": true
    },
    "get": {
      "controller": "reports",
      "handler": "getAllReports",
      "auth": true
    }
  },
  "/reports/:id": {
    "get": {
      "controller": "reports",
      "handler": "getReportById",
      "auth": true
    },
    "put": {
      "controller": "reports",
      "handler": "updateReport",
      "auth": true
    },
    "delete": {
      "controller": "reports",
      "handler": "deleteReport",
      "auth": false
    }
  },
  "/register": {
    "post": {
      "controller": "users",
      "handler": "register",
      "auth": false
    }
  },
  "/validate": {
    "get": {
      "controller": "users",
      "handler": "validateToken",
      "auth": true
    }
  }
}